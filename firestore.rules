rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    // Use a dedicated collection for authorization checks instead of hardcoded emails
    function isAuthorizedUser() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/authorized_users/$(request.auth.token.email.lower()));
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/authorized_users/$(request.auth.token.email.lower())) &&
        get(/databases/$(database)/documents/authorized_users/$(request.auth.token.email.lower())).data.isAdmin == true;
    }

    // Authorized users collection - only admins can modify
    match /authorized_users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    // Country collections
    match /morocco/{document=**} {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    match /egypt/{document=**} {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    match /africa/{document=**} {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    // Schedules
    match /schedules/{scheduleId} {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    // Published schedules subcollection
    match /schedules/{scheduleId}/published/{document=**} {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    // Admin-only collections
    match /employees/{document=**} {
      allow read, write: if isAdmin();
    }

    match /analytics/{document=**} {
      allow read, write: if isAdmin();
    }

    match /archive/{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
